{% extends 'base.html.twig' %}

{% block title %}Docente index{% endblock %}

{% block body %}
    <h1>Docente index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Telefono</th>
                <th>No_docente</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for docente in docentes %}
            <tr>
                <td>{{ docente.id }}</td>
                <td>{{ docente.nombre }}</td>
                <td>{{ docente.apellido }}</td>
                <td>{{ docente.telefono }}</td>
                <td>{{ docente.noDocente }}</td>
                <td>
                    <a href="{{ path('docente_show', {'id': docente.id}) }}">show</a>
                    <a href="{{ path('docente_edit', {'id': docente.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('docente_new') }}">Create new</a>
{% endblock %}
