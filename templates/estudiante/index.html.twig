{% extends 'base.html.twig' %}

{% block title %}Estudiante index{% endblock %}

{% block body %}
    <h1>Estudiante index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>No_carnet</th>
                <th>Fecha_ingreso</th>
                <th>Cedula</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for estudiante in estudiantes %}
            <tr>
                <td>{{ estudiante.id }}</td>
                <td>{{ estudiante.nombre }}</td>
                <td>{{ estudiante.apellido }}</td>
                <td>{{ estudiante.noCarnet }}</td>
                <td>{{ estudiante.fechaIngreso ? estudiante.fechaIngreso|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ estudiante.cedula }}</td>
                <td>
                    <a href="{{ path('estudiante_show', {'id': estudiante.id}) }}">show</a>
                    <a href="{{ path('estudiante_edit', {'id': estudiante.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('estudiante_new') }}">Create new</a>
{% endblock %}
